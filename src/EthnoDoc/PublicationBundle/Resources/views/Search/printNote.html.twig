{% extends "EthnoDocPublicationBundle:Search:search.html.twig" %}

{% block title %}EthnoDocPublicationBundle:Search:search{% endblock %}

{% block ariane %}
    <div id="ariane">
        <ol class="breadcrumb">
            {% for key, q_selection in queryParams %}
                <li>
                    <a href="{{ app.request.uri|replace( {(key) : '', (q_selection) : '', (type)~'/' : '', (notice.id) : ''}) }}">
                        {{ key }} : {{ q_selection }}
                        <i class="glyphicon glyphicon-remove"></i>
                    </a>
                </li>
            {% endfor %}
                <li>
                    <a href="{{ app.request.uri|replace( {(type)~'/' : '', (notice.id) : ''})|replace( { 'search/' : 'search'}) }}">
                        Sélection : {{ notice.title }}
                        <i class="glyphicon glyphicon-remove"></i>
                    </a>
                </li>
        </ol>
    </div>
{% endblock %}
{% block searchResult %}
    <h2>{{ notice.title }}</h2>
    <h3>{{ notice.country }}</h3>
    <h3>{{ notice.key_words }}</h3>
    <hr/>
    <div>
        <ul>
        {% if type == 'EditedMusicalNote' or type == 'NonEditedMusicalNote' or type == 'HandWrittenNote' %}
            <li><strong>Incipit littéraire du couplet (FR) : </strong>{{ notice.lead_in_couplet_f_r }}</li>
            <li><strong>Incipit littéraire du refrain (FR) : </strong>{{ notice.lead_in_refrain_f_r }}</li>
            <li><strong>Incipit littéraire du couplet (VO) : </strong>{{ notice.lead_in_couplet_v_o }}</li>
            <li><strong>Incipit littéraire du refrain (VO) : </strong>{{ notice.lead_in_refrain_v_o }}</li>
            <li><strong>Auteur ancient : </strong>{{ notice.author_ancient }}</li>
            <li><strong>Auteur folklorique : </strong>{{ notice.traditional_author }}</li>
            <li><strong>Culture : </strong>{{ notice.culture }}</li>
            <li><strong>Langue : </strong>{{ notice.language }}</li>
            <li><strong>Usage ou circonstance : </strong>{{ notice.uses_circumstance }}</li>
            <li><strong>Fonction dans l'usage ou la circonstance : </strong>{{ notice.function_uses }}</li>
            <li><strong>Thèmes Coirault : </strong>{{ notice.coirault_theme }}</li>
            <li><strong>Côte Coirault</strong>{{ notice.coirault_number }}</li>
            <li><strong>Côte Laforte : </strong>{{ notice.laforte_number }}</li>
            <li><strong>Précotation EthnoDoc : </strong>{{ notice.precotation_ethnodoc }}</li>
        {% endif %}
        {% if type == 'EditedMusicalNote' %}
            <li><strong>Artiste : </strong>{{ notice.artist }}</li>
            <li><strong>Instrument : </strong>{{ notice.instrument }}</li>
            <li><strong>Titre du phonogramme : </strong>{{ notice.phonogram_title }}</li>
            <li><strong>Collection : </strong>{{ notice.collection }}</li>
        {% endif %}
        {% if type == 'NonEditedMusicalNote' %}
            <li><strong>Témoin : </strong>{{ notice.witness }}</li>
            <li><strong>Expression : </strong>{{ notice.expression }}</li>
            <li><strong>Enquête : </strong>{{ notice.survey }}</li>
            <li><strong>Collecteur : </strong>{{ notice.collector }}</li>
            <li><strong>Collection : </strong>{{ notice.collection }}</li>
        {% endif %}
        {% if type == 'IcoVideoGraphyNote' %}
            <li><strong>Décennie : </strong>{{ notice.decade }}</li>
            <li><strong>Editeur : </strong>{{ notice.publisher }}</li>
            <li><strong>Côte Editeur : </strong>{{ notice.publisher_number }}</li>
            <li><strong>Enquête : </strong>{{ notice.survey }}</li>
            <li><strong>Fonds : </strong>{{ notice.stock }}</li>
            <li><strong>Collection : </strong>{{ notice.collection }}</li>
        {% endif %}
        {% if type == 'SpokenArchiveNote' %}
            <li><strong>Décennie : </strong>{{ notice.decade }}</li>
            <li><strong>Témoin : </strong>{{ notice.witness }}</li>
            <li><strong>Collecteur : </strong>{{ notice.collector }}</li>
            <li><strong>Enquête : </strong>{{ notice.survey }}</li>
            <li><strong>Fonds : </strong>{{ notice.stock }}</li>
            <li><strong>Collection : </strong>{{ notice.collection }}</li>
        {% endif %}
        </ul>
    </div>
{% endblock %}
