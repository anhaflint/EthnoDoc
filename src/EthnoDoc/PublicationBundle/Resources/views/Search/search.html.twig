{% extends "::base.html.twig" %}

{% block title %}EthnoDocPublicationBundle:Search:search{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            {% block searchbar %}
                <div class="col-md-3 col-xs-4 col-lg-2 col-lg-offset-1" id="facetNav">
                    <h3>Affiner la recherche</h3>
                    <h5>Disponible en ligne</h5>
                    <h5>Consultable dans les centres RADdO</h5>
                    <ul>
                        <li>Genre
                            <ul>
                                <li>
                                    Musical
                                </li>
                                <li>
                                    Iconographique
                                </li>
                                <li>
                                    Videographique
                                </li>
                                <li>
                                    Manuscrit
                                </li>
                            </ul>
                        </li>
                        <li>Pays
                            <ul>
                                {% for country in countries %}
                                    <li>
                                        <a id="{{ country.term }}" href="{{ path('ethnodoc_search', {'country' : country.term}) }}">
                                           {{ country.term }} ({{ country.count }})
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </li>
                        <li>Artiste
                            <ul>
                                {% if artists is not null %}
                                    {% for artist in artists %}
                                        <li>
                                            <a id="{{ artist.term }}" href="{{ path('ethnodoc_search', {'artist' : artist.term}) }}">
                                                {{ artist.term }} ({{ artist.count }})
                                            </a>
                                        </li>
                                    {% endfor %}
                                {% endif %}
                            </ul>
                        </li>
                    </ul>
                </div>
            {%  endblock %}


            <div id="content" class="col-md-9 col-xs-8 col-lg-6 col-xs-offset-4 col-lg-offset-3 col-md-offset-3">
                <!--search bar-->
                <div class="row">
                    <div id="resultNb" class="col-xs-4">
                        185,025 résultats trouvés
                    </div>
                    <form id="search" class="col-xs-6 pull-right form-inline">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Rechercher">
                        </div>
                        <button type="submit" class="btn btn-default">Rechercher</button>
                    </form>
                </div>
                {% block ariane %}
                    <div id="ariane">
                        <ol class="breadcrumb">
                        </ol>
                    </div>
                {% endblock %}
                <hr />
                <!--thumbnails-->
                <div class="col-xs-12 col-md-12 col-lg-12" >
                    <div class="row">
                        {% block searchResult %}
                            {% if results is not null %}
                                {% set dataResults = results.results %}
                                {% for result in dataResults %}
                                <div class="col-xs-4 col-md-4 col-lg-4">
                                    <a href="{{ path('print_note', {'id' : result.data.id , 'type' : result.type }) }}" class="thumbnail">
                                        <img src="{{ asset('img/paperboy.jpg') }}" alt="{{ result.data.title }}"/>
                                        <small>{{ result.data.title }}</small>
                                    </a>
                                </div>
                                {% endfor %}
                            {% endif %}
                        {% endblock %}
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/ariane.js') }}"></script>
{% endblock %}